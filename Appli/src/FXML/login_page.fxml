<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="rootPane" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.LoginController"
            prefWidth="800" prefHeight="500"
            style="-fx-background-color: linear-gradient(to right, #ece9e6, #ffffff);">
    <!-- Left illustration with subtle shadow -->
    <left>
        <StackPane>
            <ImageView fx:id="sideImage"
                       fitWidth="400"
                       preserveRatio="true"
                       image="images/placeholder_400.png"
                       style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 10,0,0,5);"/>
        </StackPane>
    </left>

    <!-- Center card-style login form -->
    <center>
        <StackPane>
            <VBox alignment="CENTER" spacing="20" padding="40"
                  style="-fx-background-color: white; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 15,0,0,5);">
                <!-- Logo -->
                <ImageView fx:id="logoImage"
                           fitWidth="120"
                           preserveRatio="true"
                           image="images/placeholder_120.png"/>

                <!-- Inputs -->
                <TextField fx:id="usernameField"
                           promptText="Username or Email"
                           prefWidth="280"
                           style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-padding: 8;"/>
                <PasswordField fx:id="passwordField"
                               promptText="Password"
                               prefWidth="280"
                               style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-padding: 8;"/>

                <!-- Primary login button -->
                <Button fx:id="loginButton"
                        text="Login"
                        prefWidth="280"
                        style="-fx-background-color: #4a90e2; -fx-text-fill: white; -fx-background-radius: 5; -fx-font-weight: bold;"/>

                <!-- Secondary actions -->
                <HBox spacing="15" alignment="CENTER">
                    <Button fx:id="signupButton"
                            text="Sign Up"
                            style="-fx-background-color: transparent; -fx-text-fill: #4a90e2; -fx-font-weight: bold;"/>
                    <Button fx:id="googleLoginButton"
                            text="Login with Google"
                            style="-fx-background-color: #db4437; -fx-text-fill: white; -fx-background-radius: 5; -fx-font-weight: bold;">
                        <graphic>
                            <ImageView fitWidth="16" fitHeight="16"
                                       image="images/placeholder_16.png"/>
                        </graphic>
                    </Button>
                </HBox>
            </VBox>
        </StackPane>
    </center>

    <!-- Bottom feature icons -->
    <bottom>
        <HBox alignment="CENTER" spacing="30" padding="10">
            <ImageView fx:id="pic1"
                       fitWidth="80"
                       preserveRatio="true"
                       image="images/placeholder_80.png"/>
            <ImageView fx:id="pic2"
                       fitWidth="80"
                       preserveRatio="true"
                       image="images/placeholder_80.png"/>
            <ImageView fx:id="pic3"
                       fitWidth="80"
                       preserveRatio="true"
                       image="images/placeholder_80.png"/>
        </HBox>
    </bottom>
</BorderPane>