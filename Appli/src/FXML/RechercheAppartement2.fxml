<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="RechercheAppartementController"
            stylesheets="@../css/RechercheAppartement.css"
            prefWidth="800" prefHeight="500">

  <children>
    <HBox prefWidth="800" prefHeight="500">

      <!-- LEFT PANE: solid teal + illustration -->
      <StackPane styleClass="left-pane" prefWidth="400" prefHeight="500">
        <ImageView fitWidth="360" preserveRatio="true" pickOnBounds="true">
          <image>
            <Image url="@../images/loginiamge.png"/>
          </image>
        </ImageView>
      </StackPane>

      <!-- RIGHT PANE: white card -->
      <VBox styleClass="card"
            alignment="TOP_LEFT" spacing="20"
            prefWidth="400" prefHeight="500">
        <padding>
          <Insets top="40" right="30" bottom="30" left="30"/>
        </padding>

        <!-- Page Title -->
        <Text text="Availability" styleClass="page-title"/>

        <!-- Location Field -->
        <Label text="Location" styleClass="form-label"/>
        <TextField fx:id="locField"
                   promptText="Enter location"
                   styleClass="text-field"
                   prefWidth="300"/>

        <!-- Check-in Date -->
        <Label text="Check-in Date" styleClass="form-label"/>
        <HBox spacing="10">
          <TextField fx:id="dayIn" promptText="DD" styleClass="date-field" prefWidth="60"/>
          <TextField fx:id="monthIn" promptText="MM" styleClass="date-field" prefWidth="60"/>
          <TextField fx:id="yearIn" promptText="YYYY" styleClass="date-field" prefWidth="80"/>
        </HBox>

        <!-- Check-out Date -->
        <Label text="Check-out Date" styleClass="form-label"/>
        <HBox spacing="10">
          <TextField fx:id="dayOut" promptText="DD" styleClass="date-field" prefWidth="60"/>
          <TextField fx:id="monthOut" promptText="MM" styleClass="date-field" prefWidth="60"/>
          <TextField fx:id="yearOut" promptText="YYYY" styleClass="date-field" prefWidth="80"/>
        </HBox>

        <!-- Search Button -->
        <Button fx:id="searchButton"
                text="Search"
                onAction="#handleSearch"
                styleClass="main-button"
                prefWidth="120"/>

        <!-- Error Message -->
        <Label fx:id="errorMsg" text="" styleClass="error-label"/>
      </VBox>
    </HBox>
  </children>
</AnchorPane>
