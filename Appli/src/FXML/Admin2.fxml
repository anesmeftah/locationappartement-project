<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Text?>

<Pane prefWidth="800.0" prefHeight="500.0"
      xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="your.package.Admin2Controller"
      stylesheets="@../css/Admin2.css">

    <children>
        <!-- Side Illustration (replace with your own image) -->
        <ImageView layoutX="0.0" layoutY="0.0"
                   fitWidth="300.0" fitHeight="500.0"
                   pickOnBounds="true" preserveRatio="false">
            <image>
                <Image url="@../images/AdminSide.png"/>
            </image>
        </ImageView>

        <!-- Title -->
        <Text layoutX="350.0" layoutY="100.0"
              styleClass="label-title"
              text="Admin Panel"/>

        <!-- Subtitle -->
        <Label layoutX="350.0" layoutY="140.0"
               styleClass="subtitle-label"
               text="Current Admin:"/>
        <Label fx:id="adminName"
               layoutX="520.0" layoutY="140.0"
               styleClass="subtitle-label"
               text="–"/>

        <!-- Gérer Clients Button -->
        <Button fx:id="clienButton"
                layoutX="350.0" layoutY="200.0"
                prefWidth="250.0" prefHeight="35.0"
                styleClass="action-button"
                text="Gérer Clients"
                onAction="#clienButtontoClientTab"/>

        <!-- Gérer Appartements Button -->
        <Button fx:id="appartementButton"
                layoutX="350.0" layoutY="260.0"
                prefWidth="250.0" prefHeight="35.0"
                styleClass="action-button"
                text="Gérer Appartements"
                onAction="#appartementButtontoAppartementTab"/>

        <!-- Logo Top-Right -->
        <ImageView layoutX="720.0" layoutY="10.0"
                   fitWidth="70.0" fitHeight="70.0"
                   preserveRatio="true">
            <image>
                <Image url="@../images/Rentry.png"/>
            </image>
        </ImageView>
    </children>
</Pane>
