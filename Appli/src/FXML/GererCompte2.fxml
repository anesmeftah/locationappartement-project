<Pane prefHeight="500.0" prefWidth="800.0" stylesheets="@../CSS/GererCompte.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="control.GererCompte2Controller">

    <children>
        <!-- Left colored block -->
        <Rectangle fill="#a8e6f8" height="500.0" layoutX="0.0" layoutY="0.0" width="200.0" />

        <!-- User icon -->
        <Text layoutX="68.0" layoutY="153.0" styleClass="icon-user" text="ðŸ‘¤" />

        <!-- Title -->
        <Text layoutX="240.0" layoutY="40.0" styleClass="page-title" text="Manage Account" />

        <!-- Row 0: Current Email -->
        <Label layoutX="240.0" layoutY="80.0" styleClass="form-label" text="Current Email:" />
        <Label fx:id="EmailL" layoutX="380.0" layoutY="80.0" styleClass="form-value" text="Email" />

        <!-- Row 1: New Email + Change -->
        <Label layoutX="240.0" layoutY="120.0" styleClass="form-label" text="New Email:" />
        <TextField fx:id="Email" layoutX="380.0" layoutY="110.0" prefWidth="200.0" promptText="Enter Email" styleClass="text-field" />
        <Button fx:id="ChEmail" layoutX="600.0" layoutY="110.0" onAction="#ChEmailChangeEmail" prefWidth="80.0" styleClass="change-button" text="Change" />

        <!-- Row 2: Current Number -->
        <Label layoutX="240.0" layoutY="160.0" styleClass="form-label" text="Current Number:" />
        <Label fx:id="Tele" layoutX="380.0" layoutY="160.0" styleClass="form-value" text="Telephone" />

        <!-- Row 3: New Number + Change -->
        <Label layoutX="240.0" layoutY="200.0" styleClass="form-label" text="New Number:" />
        <TextField fx:id="Numero" layoutX="380.0" layoutY="190.0" prefWidth="200.0" promptText="Enter Num" styleClass="text-field" />
        <Button fx:id="ChNum" layoutX="600.0" layoutY="190.0" onAction="#ChNumChangeNum" prefWidth="80.0" styleClass="change-button" text="Change" />

        <!-- Row 4: New Password + Change -->
