<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="GererCompte2"
            stylesheets="/CSS/stylesheet.css,/CSS/GererCompte2.css">
    <top>
        <Label text="Manage Account" styleClass="page-title"/>
    </top>
    <center>
        <GridPane hgap="10" vgap="10" alignment="CENTER" padding="20">
            <!-- form fields: e.g., Email, Password, Name -->
            <Label text="Email:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="emailField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            <Label text="Password:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <PasswordField fx:id="passwordField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            <Button text="Update" styleClass="main-button" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
        </GridPane>
    </center>
</BorderPane>