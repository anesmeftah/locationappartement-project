<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<Pane prefWidth="700" prefHeight="500"
      xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="SearchResultController"
      stylesheets="@../css/SearchResult.css">

    <children>
        <ScrollPane layoutX="20" layoutY="20" prefWidth="660" prefHeight="460" styleClass="result-scroll">
            <content>
                <VBox fx:id="resultsContainer" spacing="10">
                    <padding>
                        <Insets top="10" right="10" bottom="10" left="10"/>
                    </padding>
                </VBox>
            </content>
        </ScrollPane>
    </children>
</Pane>
