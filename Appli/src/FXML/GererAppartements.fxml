<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Text?>

<Pane prefWidth="800.0" prefHeight="500.0"
      xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="control.GererAppartementsController"
      stylesheets="@../css/GererAppartements.css">

  <children>
    <!-- 1) Illustration latérale -->
    <ImageView layoutX="0" layoutY="0"
               fitWidth="300" fitHeight="500"
               pickOnBounds="true" preserveRatio="false">
      <image>
        <!-- Remplacez par votre illustration d’appartements -->
        <Image url="@../images/sidebar_appartements.png"/>
      </image>
    </ImageView>

    <!-- 2) Overlay + icône -->
    <Rectangle layoutX="0" layoutY="0" width="300" height="500"
               fill="#a8e6f833"/>
    <Text layoutX="120" layoutY="160"
          text="🏠"
          styleClass="icon-appartements"/>    <!-- 3) Titre ADMIN -->
    <Text layoutX="350" layoutY="80"
          text="ADMIN"
          styleClass="page-title"/>

    <!-- Back Button -->
    <Button fx:id="backButton"
            layoutX="350" layoutY="80"
            prefWidth="100" prefHeight="30"
            text="Back"
            onAction="#backButtonAction"
            styleClass="back-button"/>

    <!-- 4) Boutons Show/Hide et Supprimer -->
    <Button fx:id="showList"
            layoutX="350" layoutY="120"
            prefWidth="200" prefHeight="35"
            text="Show List"
            onAction="#showListAction"
            styleClass="action-button"/>

    <Button fx:id="supprimerClient"
            layoutX="570" layoutY="120"
            prefWidth="200" prefHeight="35"
            text="Supprimer Appartements"
            onAction="#supprimerClientAction"
            styleClass="action-button"
            visible="false"/>

    <!-- 5) Liste déroulante des appartements -->
    <ScrollPane fx:id="scroll"
                layoutX="350" layoutY="180"
                prefWidth="420" prefHeight="300"
                visible="false"
                styleClass="scroll-pane">
      <content>
        <VBox fx:id="listContainer" spacing="8">
          <padding>
            <Insets top="8" right="8" bottom="8" left="8"/>
          </padding>
        </VBox>
      </content>
    </ScrollPane>
  </children>
</Pane>
