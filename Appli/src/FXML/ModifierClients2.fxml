<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="ModifierClients2"
            stylesheets="/CSS/stylesheet.css,/CSS/ModifierClients2.css">
    <top>
        <Label text="Modify Client" styleClass="page-title"/>
    </top>
    <center>
        <GridPane hgap="10" vgap="10" alignment="CENTER" padding="20">
            <!-- form fields for editing client details -->
            <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="emailField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            <Button text="Save" styleClass="main-button" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
        </GridPane>
    </center>
</BorderPane>