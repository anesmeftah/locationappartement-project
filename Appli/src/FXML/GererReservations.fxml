<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Text?>

<Pane prefWidth="800.0" prefHeight="500.0"
      xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="your.package.GererReservationsController"
      stylesheets="@../css/GererReservation.css">

  <children>
    <!-- Side Illustration -->
    <ImageView layoutX="0" layoutY="0"
               fitWidth="300" fitHeight="500"
               pickOnBounds="true" preserveRatio="false">
      <image>
        <Image url="@../images/GRSB.png"/>
      </image>
    </ImageView>

    <!-- Overlay + Icon -->
    <Rectangle layoutX="0" layoutY="0" width="300" height="500"
               fill="#a8e6f833"/>
    <Text layoutX="120" layoutY="160" text="ðŸ“‹" styleClass="icon-reserve"/>

    <!-- ADMIN Title -->
    <Text layoutX="350" layoutY="80" text="ADMIN" styleClass="page-title"/>

    <!-- Show/Hide List Button -->
    <Button fx:id="showList"
            layoutX="350" layoutY="120"
            prefWidth="200" prefHeight="35"
            text="Show List"
            onAction="#showListAction"
            styleClass="action-button"/>

    <!-- Delete Reservations Button -->
    <Button fx:id="supprimerClient"
            layoutX="570" layoutY="120"
            prefWidth="200" prefHeight="35"
            text="Supprimer Reservations"
            onAction="#supprimerClientAction"
            styleClass="action-button"
            visible="false"/>

    <!-- Scrollable Reservations List -->
    <ScrollPane fx:id="scroll"
                layoutX="350" layoutY="180"
                prefWidth="420" prefHeight="300"
                visible="false"
                styleClass="scroll-pane">
      <content>
        <VBox fx:id="listContainer" spacing="8">
          <padding>
            <Insets top="8" right="8" bottom="8" left="8"/>
          </padding>
        </VBox>
      </content>
    </ScrollPane>
  </children>
</Pane>
